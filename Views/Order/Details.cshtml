@model Nhom19_WebBanHoa.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h2>Chi tiết đơn hàng #@Model.Id</h2>
<p><strong>Khách hàng:</strong> @Model.CustomerName</p>
<p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>
<p><strong>Địa chỉ giao:</strong> @Model.Address</p>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Hoa</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Flower.Ten</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity).ToString("N0") đ</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="text-end">Tổng cộng: <strong>@Model.TotalAmount.ToString("N0") đ</strong></h4>

@model List<Nhom19_WebBanHoa.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2>Quản lý đơn hàng</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Khách</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.CustomerName</td>
                <td>@o.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@o.TotalAmount.ToString("N0") đ</td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-flex">
                        <input type="hidden" name="id" value="@o.Id" />
                        <select name="status" class="form-select form-select-sm me-2">
                            <option value="Đang xử lý" selected="@(o.Status == "Đang xử lý" ? "selected" : null)">Đang xử lý</option>
                            <option value="Đã giao" selected="@(o.Status == "Đã giao" ? "selected" : null)">Đã giao</option>
                            <option value="Đã huỷ" selected="@(o.Status == "Đã huỷ" ? "selected" : null)">Đã huỷ</option>

                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Nhom19_WebBanHoa.Models.Order>

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", "AdminOrders", new { id = order.Id })">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

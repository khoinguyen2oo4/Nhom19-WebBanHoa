@* Đảm bảo file này được lưu với encoding UTF-8 (không BOM) để hiển thị đúng tiếng Việt *@
@model List<Nhom19_WebBanHoa.Models.Flower>
@{
    ViewData["Title"] = "Flowers";
}

<div class="container mt-4">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Flowers</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Danh mục bên trái -->
        <div class="col-md-3">
            <h5>Danh mục</h5>
            <ul class="list-group">
                <li class="list-group-item"><input type="checkbox" /> Tất cả Sản Phẩm</li>
                <li class="list-group-item"><input type="checkbox" /> Hoa Khai Trương</li>
                <li class="list-group-item"><input type="checkbox" /> Hoa Cưới</li>
                <li class="list-group-item"><input type="checkbox" /> Hoa Sinh Nhật</li>
            </ul>
        </div>

        <!-- Sản phẩm bên phải -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <a href="/Product/ProductDetail/@item.Id">
                                <img src="~/images/@item.HinhAnh" class="card-img-top" alt="@Html.Encode(item.Ten)">
                            </a>
                            <div class="card-body text-center">
                                <h5 class="card-title">@Html.Encode(item.Ten)</h5>
                                <p class="card-text">@Html.Encode(item.MoTa)</p>
                                <p class="card-text text-danger fw-bold">@item.Gia.ToString("N0") ₫</p>
                                <a href="/Product/ProductDetail/@item.Id" class="btn btn-primary">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
